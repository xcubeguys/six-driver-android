<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar_layout"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >
    <LinearLayout
        android:id="@+id/car_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="8"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hatchback"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp"
            android:gravity="start"
            android:maxLines="2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/txt_hatchback"
            android:layout_weight="2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Sedan"
            android:singleLine="true"
            android:gravity="start"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_luxury"
            android:id="@+id/txt_sedan"
            android:layout_weight="2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SUV"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txt_suv"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_sedan"
            android:layout_marginRight="10dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SUV"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentEnd="true"
            android:textSize="12dp"
            android:id="@+id/txt_four"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>