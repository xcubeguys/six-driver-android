<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2_end_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F2F5"
        card_view:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_layout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:text="@string/app_name"
                android:background="@color/colorPrimary"
                android:id="@+id/header"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backButton"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/header"
                android:src="@drawable/arrow_left"
                android:background="@null"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Your Emergency Contacts"
                android:textAllCaps="false"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/textView2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/backButton"
                android:layout_alignBottom="@+id/header" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/driver_profile_layout"
                android:orientation="vertical"
                android:layout_below="@+id/header"                >



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view"
                    android:layout_below="@+id/car_type"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/fields"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/view"
                    android:weightSum="2"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/mobile_layout1"
                        android:layout_below="@+id/textView3"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        >

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/cc"
                            android:text="@string/default_cc"
                            android:clickable="false"
                            android:focusable="false"
                            app:met_floatingLabelTextColor="@color/colorPrimary"
                            app:met_textColorHint="@color/colorPrimary"
                            android:layout_marginRight="10dp"
                            app:met_underlineColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent"
                            android:id="@+id/countryCode1" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mobile1"
                            android:inputType="number"
                            app:met_floatingLabelTextColor="@color/colorPrimary"
                            app:met_textColorHint="@color/colorPrimary"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            app:met_underlineColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent"
                            android:id="@+id/mobileNumber1"
                            android:maxLength="15"
                            android:imeOptions="actionDone"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/mobile_layout2"
                        android:layout_below="@+id/textView3"
                        android:layout_marginTop="20dp"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        >

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/cc"
                            android:text="@string/default_cc"
                            android:clickable="false"
                            android:focusable="false"
                            app:met_floatingLabelTextColor="@color/colorPrimary"
                            app:met_textColorHint="@color/colorPrimary"
                            android:layout_marginRight="10dp"
                            app:met_underlineColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent"
                            android:id="@+id/countryCode2" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mobile2"
                            android:inputType="number"
                            app:met_floatingLabelTextColor="@color/colorPrimary"
                            app:met_textColorHint="@color/colorPrimary"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            app:met_underlineColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent"
                            android:id="@+id/mobileNumber2"
                            android:maxLength="15"
                            android:imeOptions="actionDone"
                            />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view1"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/callmsglay"
                    android:visibility="visible"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/view1"
                    android:id="@+id/cancellay"
                    android:layout_margin="15dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cancel_layout"
                        android:layout_alignEnd="@+id/view8"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/block_icon"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/cancel_image"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/txtCancelpayment"
                                android:textColor="@color/colorPrimary"
                                android:layout_alignBottom="@+id/cancel_image"
                                android:layout_alignTop="@+id/cancel_image"
                                android:gravity="center_vertical"
                                android:fontFamily="@string/app_font"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_toEndOf="@+id/cancel_image" />

                        </RelativeLayout>


                    </RelativeLayout>



                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/darker_gray"
                        android:id="@+id/view8">

                    </View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/view8"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/update_layout"
                        android:layout_alignParentTop="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_done"
                                android:id="@+id/update_image"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/txtupdate"
                                android:gravity="center_vertical"
                                android:layout_toEndOf="@+id/update_image"
                                android:layout_alignBottom="@+id/update_image"
                                android:layout_alignTop="@+id/update_image"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@string/app_font"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                />


                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view2"
                    android:layout_below="@+id/cancellay"
                    android:visibility="visible"
                    />

            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <com.tommy.rider.adapter.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

</RelativeLayout>
