<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tommy.rider.SoSActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:paddingLeft="50dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="SOS Emergency"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:padding="6dp"
        android:src="@drawable/arrow_left" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:layout_below="@+id/header"
    android:id="@+id/sendsms_layout"
    android:orientation="vertical"
    style="@style/Widget.AppCompat.Button.Colored"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:id="@+id/sendsms_imageview"
        android:background="@null"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_message"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_below="@+id/header"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Emergency Sms"
        android:textColor="@android:color/black"
        android:id="@+id/sendbtn"
        android:background="@android:color/holo_red_dark"
        />
</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendsms_layout"
        android:id="@+id/settings_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/sett_icon"
            android:src="@drawable/ic_settings"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Settings"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:id="@+id/sett_butt"
            android:background="@color/colorPrimary"
            />



    </LinearLayout>




</RelativeLayout>
