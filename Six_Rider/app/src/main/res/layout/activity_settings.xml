<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tommy.rider.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:text="@string/app_name"
            android:background="@color/colorPrimary"
            android:id="@+id/header"
            android:textStyle="bold"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/header"
            android:src="@drawable/arrow_left"
            android:background="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            android:textAllCaps="false"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/textView2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/backButton"
            android:layout_alignBottom="@+id/header" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editButton"
            android:padding="5dp"
            android:src="@drawable/pencil_circle"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editCancelButton"
            android:padding="5dp"
            android:src="@drawable/close_circle_outline_white"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/header"
            android:layout_alignParentTop="true"
            android:visibility="gone"/>

    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image_layout"
        android:background="#f5f5f5"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profileImage"
            android:background="@drawable/account_circle_grey"
            android:foregroundGravity="center"
            android:layout_alignParentTop="true"
            android:clickable="false"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_image_layout"
        android:id="@+id/name_layout">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            android:layout_alignParentTop="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            android:layout_alignBottom="@+id/fname_layout"
            />



        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:layout_centerHorizontal="true"
            android:id="@+id/view4"
            android:layout_alignBottom="@+id/fname_layout"
            android:layout_alignParentTop="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/fname_layout"
            android:layout_toStartOf="@+id/view4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#A4A4AC"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_firstname"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtFirstName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="First Name"
                android:background="@null"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/text_firstname"
                android:layout_alignParentStart="true"
                android:enabled="false"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fname_layout"
            android:layout_toEndOf="@+id/fname_layout"
            android:id="@+id/lname_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#A4A4AC"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lname_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtLastName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Last Name"
                android:background="@null"
                android:enabled="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/lname_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nick_layout"
            android:layout_below="@+id/name_layout"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nick Name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#A4A4AC"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/Nick_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtnickname"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="Nick Name"
                android:background="@null"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/Nick_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:enabled="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"
                android:layout_below="@+id/edtnickname"
                />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_layout"
        android:layout_below="@+id/nick_layout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#A4A4AC"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/mobile_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtCountryCode"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:hint="CC"
            android:background="@null"
            android:enabled="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/mobile_title"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtMobile"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:hint="@string/mobile_number"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignBottom="@+id/edtCountryCode"
            android:layout_alignEnd="@+id/mobile_title"
            android:enabled="false"
            android:layout_toEndOf="@+id/edtCountryCode" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_below="@+id/mobile_layout"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_layout"
        android:layout_below="@+id/mobile_layout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#A4A4AC"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/email_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtEmail"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:hint="Email"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/email_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:enabled="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            android:layout_below="@+id/edtEmail"
            />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/referral_layout"
            android:layout_below="@+id/email_layout"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referral code"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#A4A4AC"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/referral_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtreferral"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:hint="TMRY11"
                android:background="@null"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/referral_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:enabled="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"
                android:layout_below="@+id/edtreferral"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:id="@+id/share"
                android:gravity="center"
                android:text="Share"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#B9B9B9"
            android:id="@+id/save_button"
            android:layout_below="@id/email_layout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"/>

                <com.tommy.rider.adapter.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>