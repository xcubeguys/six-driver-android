<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_your_trip_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tommy.rider.YourTripDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="@string/app_name"
            android:background="@color/colorPrimary"
            android:id="@+id/header"
            android:textStyle="bold"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/trip_status_layout" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/backButton"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/arrow_left"
            android:background="@null"
            android:layout_alignBottom="@+id/header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/trip_status_layout"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/backButton"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/trip_date"
                android:hint="Sun, Nov 27, 18:41 P.M"
                android:textColorHint="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorWhite"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/header_layout"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/driver_profile_layout"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/account_circle_grey"
                    android:id="@+id/driver_image"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/driver_name"
                    android:text="@string/driver_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:inputType="textCapSentences"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/driver_image"
                    android:layout_toEndOf="@+id/driver_image"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/driver_image"
                    android:layout_toEndOf="@+id/driver_image"
                    android:layout_alignStart="@+id/driver_name"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/ratinglay"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rate_text"
                        android:text="@string/you_rated"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="5dp"
                        />

                    <com.tommy.rider.adapter.CustomRatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="10dp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        app:colorFillOff="@android:color/transparent"
                        app:colorFillOn="@color/colorPrimary"
                        app:colorFillPressedOff="@android:color/transparent"
                        app:colorFillPressedOn="@color/colorPrimary"
                        app:colorOutlineOff="@color/colorPrimary"
                        app:colorOutlineOn="@color/colorPrimary"
                        app:colorOutlinePressed="@color/colorPrimary"
                        app:polygonVertices="5"
                        app:polygonRotation="0"
                        app:strokeWidth="1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ratinglay"
                    android:id="@+id/cancellay"
                    android:visibility="gone"
                    android:layout_alignStart="@+id/driver_name"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/block_icon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trip Cancelled"
                        android:id="@+id/txtCancelTrip"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/field_text_color_error"
                        android:fontFamily="@string/app_font"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view"
                    android:layout_below="@+id/cancellay"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trip_details_layout"
                android:layout_below="@+id/driver_profile_layout">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/trip_car"
                    android:id="@+id/car_image"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/car_image"
                    android:id="@+id/car_type"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:hint="Car Type"
                    android:layout_alignBottom="@+id/view2"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentTop="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view2"
                    android:layout_below="@+id/car_image"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:layout_alignStart="@+id/car_image" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_speedometer"
                    android:id="@+id/speed_meter"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/view2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/distance_traveled"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_below="@+id/car_type"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/speed_meter"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:hint="Distance Traveled"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_above="@+id/location_layout" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view3"
                    android:layout_below="@+id/speed_meter"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:layout_alignStart="@+id/car_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/location_layout"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_below="@+id/view3"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:id="@+id/pickup_location_layout"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/pickup_time"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:text="18:00"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimary"
                            android:padding="10dp"
                            android:visibility="gone"
                            />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/start_icon"
                            android:src="@mipmap/upper"
                            android:background="@null"
                            android:layout_toEndOf="@+id/pickup_time"
                            android:layout_marginLeft="20dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimary"
                            android:hint="@string/pickup_location"
                            android:ellipsize="end"
                            android:id="@+id/pick_location"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/start_icon" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_below="@id/view3"
                        android:id="@+id/drop_location_layout"
                        android:visibility="visible"
                        android:layout_marginLeft="10dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/drop_layout">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/drop_time"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"
                                android:text="21:00"
                                android:gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimary"
                                android:padding="10dp"
                                android:visibility="gone"
                                />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/imageButton5"
                                android:src="@mipmap/lower"
                                android:background="@null"
                                android:layout_marginLeft="20dp"
                                android:layout_toEndOf="@+id/drop_time"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:hint="@string/drop_location"
                                android:textColor="@color/colorPrimary"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:id="@+id/drop_location"
                                android:layout_marginEnd="10dp"
                                android:layout_toEndOf="@+id/imageButton5"
                                android:layout_marginStart="10dp"/>

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view4"
                    android:layout_below="@+id/location_layout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view4"
                    android:layout_alignStart="@+id/location_layout"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/txt_payment"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Payment"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/txt_toll_price"
                        android:layout_below="@id/txt_payment"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Toll Fee"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/txt_cancel_price"
                        android:layout_below="@id/txt_toll_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Cancel Fee"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/txt_book_price"
                        android:layout_below="@id/txt_cancel_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Book Fee"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/txt_tax_price"
                        android:layout_below="@id/txt_book_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Tax Percentage"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/txt_airport_price"
                        android:layout_below="@id/txt_tax_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Airport Fee"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/waypinttxt"
                        android:layout_below="@id/txt_airport_price"
                        android:gravity="center_vertical"
                        android:maxWidth="120dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="23 Additional Stops"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/txt_total_price"
                        android:layout_below="@id/waypinttxt"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Total Amount"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/toll_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calculating.."
                        android:layout_toEndOf="@+id/txt_total_price"
                        android:layout_below="@+id/txt_payment"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/cancel_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calculating.."
                        android:visibility="gone"
                        android:layout_toEndOf="@+id/txt_total_price"
                        android:layout_below="@+id/toll_price"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/book_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calculating.."
                        android:layout_toEndOf="@+id/txt_total_price"
                        android:layout_below="@+id/cancel_price"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/tax_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calculating.."
                        android:layout_toEndOf="@+id/txt_total_price"
                        android:layout_below="@+id/book_price"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/airport_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calculating.."
                        android:layout_toEndOf="@+id/txt_total_price"
                        android:layout_below="@+id/tax_price"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/waypointamnt"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calculating.."
                        android:layout_toEndOf="@+id/txt_total_price"
                        android:layout_below="@+id/airport_price"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/total_price"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Calculating.."
                        android:layout_toEndOf="@+id/txt_total_price"
                        android:layout_below="@+id/waypointamnt"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp"/>



                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/payment_mode"
                        android:background="@drawable/ub__payment_type_cash"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Cash"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="12dp"
                        android:layout_above="@+id/toll_price"
                        android:layout_alignStart="@+id/total_price" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>